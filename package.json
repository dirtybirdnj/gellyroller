{
  "name": "gellyroller",
  "version": "1.0.0",
  "description": "Express API and UI for controlling the Gellyroller pen-plotter machine with Duet mainboard",
  "main": "express.js",
  "type": "module",
  "scripts": {
    "start": "node express.js",
    "dev": "node express.js",
    "test": "node tests.js",
    "deploy": "git pull && sudo systemctl restart nginx && pm2 restart gellyroller",
    "pm2:start": "pm2 start express.js --name gellyroller",
    "pm2:restart": "pm2 restart gellyroller",
    "pm2:stop": "pm2 stop gellyroller",
    "pm2:logs": "pm2 logs gellyroller",
    "pm2:delete": "pm2 delete gellyroller",
    "pm2:save": "pm2 save",
    "pm2:startup": "pm2 startup"
  },
  "keywords": ["gellyroller", "pen-plotter", "duet", "cnc", "api", "express", "raspberry-pi"],
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/dirtybirdnj/gellyroller.git"
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "serialport": "^12.0.0",
    "@serialport/parser-readline": "^12.0.0"
  }
}